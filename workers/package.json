{
  "name": "ugc-maroc-workers",
  "version": "1.0.0",
  "description": "UGC Maroc Backend API - Cloudflare Workers",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 execute ugc-maroc-db --remote --file=migrations/0000_initial.sql",
    "db:migrate:local": "wrangler d1 execute ugc-maroc-db --local --file=migrations/0000_initial.sql"
  },
  "dependencies": {
    "@auth/core": "^0.30.0",
    "@auth/d1-adapter": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "drizzle-orm": "^0.44.6",
    "hono": "^4.0.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231025.0",
    "drizzle-kit": "^0.31.5",
    "typescript": "^5.0.0",
    "wrangler": "^4.45.0"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "ugc",
    "maroc",
    "api"
  ],
  "author": "UGC Maroc Team",
  "license": "ISC"
}
